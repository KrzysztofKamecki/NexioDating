@using DatingNexio.Models;

@model DatingNexio.Models.Person
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
<fieldset>
    <div class="edior-label">
        @Html.LabelFor(model => model.Name)

    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="edior-label">
        @Html.LabelFor(model => model.Height)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Height)
        @Html.ValidationMessageFor(model => model.Height)
    </div>
    <div class="edior-label">
        @Html.LabelFor(model => model.BirthDate)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.BirthDate, new { type = "date" })
        @Html.ValidationMessageFor(model => model.BirthDate)
    </div>
    <div class="edior-label">
        @Html.LabelFor(model => model.EyeColour)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.EyeColour, new SelectList(Enum.GetValues(typeof(EyeColourEnum))))
        @Html.ValidationMessageFor(model => model.EyeColour)
    </div>
    <br />
    <div class="editor-field">
        <input type="submit" value="Przejdź do następnego kroku" />
    </div>
</fieldset>
}